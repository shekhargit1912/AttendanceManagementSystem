<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg4"
    android:orientation="vertical"
    tools:context=".Addstaff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="Staff Registration"
                android:textColor="#000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_margin="25dp"
                android:elevation="24dp"
                app:cardCornerRadius="8dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#000"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/staffname"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/colorPrimaryDark"
                                android:hint="Enter Your Name"
                                android:inputType="text"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimaryDark" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#000"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/staffmobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/colorPrimaryDark"
                                android:hint="Enter Your Contact"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimaryDark" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#000"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/staffaddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/colorPrimaryDark"
                                android:hint="Enter Your Address"
                                android:inputType="text"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimaryDark" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#000"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/staffquali"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/colorPrimaryDark"
                                android:hint="Enter Your Qualification"
                                android:inputType="text"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimaryDark" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#000"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/staffstd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/colorPrimaryDark"
                                android:hint="Enter Allocated  Standard"
                                android:inputType="text"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimaryDark" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#000"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/staffdiv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/colorPrimaryDark"
                                android:hint="Enter Allocated Division"
                                android:inputType="text"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimaryDark" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#000"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/colorPrimaryDark"
                                android:hint="Enter Username"
                                android:inputType="text"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimaryDark" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#000"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:hint="Enter Password"
                                android:inputType="textPassword"
                                android:textColorHint="@color/colorPrimaryDark" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </ScrollView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/register"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttongrad"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/buttongrad"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
